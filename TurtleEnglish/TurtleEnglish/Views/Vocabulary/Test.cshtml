
@{
    ViewBag.Title = "Test";
    Layout = "~/Views/Shared/TurtleEnglish_layout.cshtml";
}

<div class="formQuestion">
    <h2>Bài tập từ vựng tiếng Anh</h2>
    <br>
    <form action="@Url.Action("Checktest", "Vocabulary")" method="post">
        <ol>
            @for (int i = 0; i < 8; i++)
            {
                <li class='questions'>
                    @Model.vocabList[i].word mean
                    <br>
                    <input type="radio" name="@Model.vocabList[i].id" value="@Model.vocabList[i].mean" style='margin:10px' /> @Model.vocabList[i].mean<br />
                    <input type='radio' name="@Model.vocabList[i].id" value="@Model.vocabList[i + 1].mean" style='margin:10px'> @Model.vocabList[i + 1].mean<br>
                    <input type="radio" name="@Model.vocabList[i].id" value="@Model.vocabList[i + 1].mean" style='margin:10px' /> @Model.vocabList[i + 2].mean<br />
                </li>
            }
        </ol>

        <input class="btn btn-warning" type="submit" value="Finish" style="margin:auto;margin-bottom:30px;" name="submit">
    </form>
</div>
</div>

