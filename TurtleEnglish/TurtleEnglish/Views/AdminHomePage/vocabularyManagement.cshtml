@using TurtleEnglish.Models;
@using TurtleEnglish.Controllers;
@model AdminHomePageController
@{
    ViewBag.Title = "vocabularyManagement";
    Layout = "~/Views/Shared/TurtleEnglish_adminLayoutPage.cshtml";
}

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Vocabulary Management</h3>
            </div>
            <div class="title_right">
                <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for...">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">Go!</button>
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <div class="clearfix" ></div>
        <div class="row">
            <div class="col-md-12" style="padding-left:150px; padding-right:150px;">
                <div class="x_panel">
                    <div class="x_title">
                        <h2 style="width:80%;">Vocabulary List</h2>
                        <a href="/AdminHomePage/vocabAdd" class="btn btn-info" style="background: #EA9415;border: #EA9415;"><i class="fa fa-plus-square"></i> Add </a>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>

                            <li>
                                <a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <!-- start project list -->
                        <table class="table table-striped projects">
                            <thead>
                                <tr>
                                    <th style="width: 20%">Word</th>
                                    <th>Type</th>
                                    <th>Mean</th>
                                    <th>Level</th>
                                    
                                    <th style="width: 20%">#Edit</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.vocab)
                                {
                                <tr>
                                    <td>
                                        <a>@item.word</a>
                                    </td>
                                    <td>
                                        <a>@item.typeWord</a>
                                    </td>
                                    <td>
                                        <a>@item.mean</a>
                                    </td>
                                    <td>
                                        <a>@item.levelStudy</a>
                                    </td>
                                  
                                    <td>
                                        @using (Html.BeginForm("DeleteVocab", "AdminHomePage", new { word = item.word }))
                                        {
                                            <a href="@Url.Action("vocabDetail", "AdminHomePage", new { word = item.word })" class="btn btn-info btn-xs"><i class="fa fa-book"></i> Edit </a>
                                            <button type="submit" onclick="return confirm('Are you want to remove topic: @item.word?');" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> Delete </button>
                                        }
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                        <!-- end project list -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
